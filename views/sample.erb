<form class="topics" action="/topics" method="post">
         <div class="input-row">
           <label for="topics_id">Topic Title:</label>
            <textarea name="topic"></textarea>
               <input class="button-primary" type="submit" value="Submit"/>
             
              <select name="topics_id">
                <% @topics.each do |topic| %>
                    <option value="<%= "#{topic['user_id']}" %>"><%= "#{topic['topic']}" %></option>
                <%end%>    
                </select 
                 
                 <div class="input-row">
                 <input type="submit content" value="submit" name="choose a topic"/>
                 </div>
          </div>          
        </form>


