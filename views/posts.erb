          <label for="user_name">Author:</label>
          <input type="hidden" value= <%= 'user_name' %>  name="<%='user_name'%>">
        </div>   
    
        <div class="input-row">
           <label for="content">COMMENTS: <br /></label>
           <textarea name="content"></textarea>
        </div>
            <% @posts.each do |post| %>  
            <%= post['user_name'] %> <%= post['topic_id'] %> <%= post['content']%> 
            <% end %>
          <div class="input-row">
             <input type="submit" value="submit content"/>
          </div>
     
    	
